{
	"name": "hirefit-website",
	"version": "0.0.1",
	"scripts": {
		"dev:only": "svelte-kit dev",
		"build:only": "svelte-kit build",
		"preview": "svelte-kit preview",
		"tailwind:watch": "cross-env TAILWIND_MODE=watch cross-env NODE_ENV=development postcss src/styles/tailwind.css -o src/styles/tailwind-output.css -w",
		"tailwind:build": "cross-env TAILWIND_MODE=build cross-env NODE_ENV=production postcss src/styles/tailwind.css -o src/styles/tailwind-output.css",
		"dev": "concurrently \"yarn run dev:only\" \"yarn run tailwind:watch\"",
		"build": "yarn run tailwind:build && yarn run build:only",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"autoprefixer": "^10.4.2",
		"concurrently": "^7.0.0",
		"cross-env": "^7.0.3",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"gulp": "^4.0.2",
		"gulp-shell": "^0.8.0",
		"postcss-cli": "^9.1.0",
		"prettier": "^2.4.1",
		"prettier-plugin-svelte": "^2.4.0",
		"sass": "^1.49.9",
		"svelte": "^3.49.0",
		"svelte-preprocess": "^4.10.1",
		"tailwind-scrollbar": "^1.3.1",
		"tailwindcss": "^3.0.12"
	},
	"type": "module",
	"dependencies": {
		"@fortawesome/free-solid-svg-icons": "^6.0.0",
		"@sveltejs/adapter-node": "^1.0.0-next.60",
		"daisyui": "^2.14.3",
		"nodemailer": "^6.7.2",
		"nodemailer-direct-transport": "^3.3.2",
		"nodemailer-express-handlebars": "^4.0.0",
		"svelte-fa": "^2.4.0",
		"svelte-preprocess": "^4.10.1",
		"svelte-transition": "^0.0.4",
		"tailwindcss-ripple": "^0.7.1"
	}
}
