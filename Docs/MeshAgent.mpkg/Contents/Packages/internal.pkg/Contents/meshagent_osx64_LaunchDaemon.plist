<plist version="1.0">
	<dict>
		<key>Label</key>
		<string>meshagent</string>
		<key>ProgramArguments</key>
		<array>
			<string>/usr/local/mesh_services/meshagent/meshagent_osx64</string>
		</array>

		<key>WorkingDirectory</key>
		<string>/usr/local/mesh_services/meshagent/</string>
